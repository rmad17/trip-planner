PORT=3000
DB_URL="host=localhost user= password= dbname= port=5432 sslmode=disable"
SECRET=auth-api-jwt-secret

# Google OAuth Configuration
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret
# Callback URL should point to your BACKEND API (where the callback handler is)
GOOGLE_OAUTH_CALLBACK_URL=http://localhost:8080/auth/google/callback
# Frontend URL to redirect to after successful authentication
FRONTEND_URL=http://localhost:3000

# Database Migration Configuration
# Migration method: sql (recommended) or gorm
# sql: Runs .sql files from migrations/ directory
# gorm: Uses GORM AutoMigrate from Go models
MIGRATION_METHOD=sql

# LLM Provider Configuration
# Supported providers: gemini, claude, gpt
# Default provider (if not specified, defaults to gemini)
DEFAULT_LLM_PROVIDER=gemini

# API Keys for LLM Providers
# Gemini (Google AI) - https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Claude (Anthropic) - https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# GPT (OpenAI) - https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Storage Provider Configuration
# Supported providers: local, digitalocean, s3, gcs, cloudflare
# Default provider (if not specified, defaults to local)
STORAGE_PROVIDER=local

# DigitalOcean Spaces Configuration
# Required when STORAGE_PROVIDER=digitalocean
DO_SPACES_ACCESS_KEY=your_digitalocean_access_key_here
DO_SPACES_SECRET_KEY=your_digitalocean_secret_key_here
DO_SPACES_REGION=nyc3
DO_SPACES_BUCKET=your-bucket-name
DO_SPACES_ENDPOINT=nyc3.digitaloceanspaces.com
